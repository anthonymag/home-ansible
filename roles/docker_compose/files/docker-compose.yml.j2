version: '3.2'
services:

  bazarr:
    image: lscr.io/linuxserver/bazarr:latest
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - bazarr-config:/config
      - /media/movies:/movies
      - /media/tv:/tv 
    ports:
      - 6767:6767
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - homepage.name=Bazarr
      - homepage.icon=mdi-F0A16
      - homepage.href=http://hub.antcar:6767

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: cadvisor
    ports:
    - 8359:8080
    volumes:
    - /:/rootfs:ro
    - /var/run:/var/run:rw
    - /sys:/sys:ro
    - /var/lib/docker/:/var/lib/docker:ro
    depends_on:
    - redis
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Observability
      - homepage.name=CAdvisor
      - homepage.icon=mdi-F0A16
      - homepage.href=http://hub.antcar:8359

  cloudflared:
    container_name: cloudflared
    image: cloudflare/cloudflared:1347-4c3417fedda9
    restart: unless-stopped
    command: tunnel run
    environment:
      - TUNNEL_TOKEN={{ cloudflared_tunnel_token }}
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  deluge:
    image: lscr.io/linuxserver/deluge:latest
    container_name: deluge
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - DELUGE_LOGLEVEL=info
    volumes:
      - deluge-config:/config
      - /media/downloads:/downloads
    ports:
      - 8112:8112
      - 6881:6881
      - 6881:6881/udp
      - 58846:58846 #optional
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - 'homepage.group=Media'
      - homepage.name=Deluge
      - homepage.icon=si-#EB0443
      - homepage.href=http://hub.antcar:8112

  dozzle:
    container_name: dozzle
    image: amir20/dozzle:latest
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    ports:
      - 9999:8080
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Observability
      - homepage.name=Dozzle
      - homepage.icon=mdi-F1085
      - homepage.href=http://hub.antcar:9999

  esphome:
    image: esphome/esphome:latest
    container_name: esphome
    volumes:
      - esphome-config:/config:rw
      # Use local time for logging timestamps
      - /etc/localtime:/etc/localtime:ro
    network_mode: host
    restart: always
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - 'homepage.group=Home Automation'
      - homepage.name=ESPHome
      - homepage.icon=si-#000000
      - homepage.href=http://hub.antcar:6052

  grafana:
    image: grafana/grafana-oss
    container_name: grafana
    restart: unless-stopped
    ports:
     - '3002:3000'
    volumes:
      - grafana:/var/live/grafana
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Observability
      - homepage.name=Grafana
      - homepage.icon=mdi-F1085
      - homepage.href=http://hub.antcar:3002

  homeassistant:
    container_name: homeassistant
    image: ghcr.io/home-assistant/home-assistant:2024.3
    volumes:
      - /root/home-assistant-config:/config
      - /etc/localtime:/etc/localtime:ro
      - /run/dbus:/run/dbus:ro
    restart: unless-stopped
    privileged: true
    network_mode: host
    labels:
      - 'homepage.group=Home Automation'
      - 'homepage.name=Home Assistant'
      - homepage.icon=si-#18BCF2
      - homepage.href=https://ha.antcar.casa

  homeassistant-s3-backup:
    container_name: homeassistant-s3-backup
    image: istepanov/backup-to-s3:latest
    restart: always
    environment:
      - ACCESS_KEY={{ s3_backup_aws_access_key }}
      - 'SECRET_KEY={{ s3_backup_aws_secret_key }}'
      - S3_PATH=s3://anthonymag-backups/homeassistant/
      - 'CRON_SCHEDULE=0 4 * * *'
    volumes:
      - /root/home-assistant-config/backups:/data:ro
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    ports:
      - 3001:3000
    volumes:
      - homepage-config:/app/config
      - /var/run/docker.sock:/var/run/docker.sock 
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  jellyfin:
    image: jellyfin/jellyfin
    container_name: jellyfin
    user: root:root
    network_mode: 'host'
    volumes:
      - jellyfin-config:/config
      - jellyfin-cache:/cache
      - type: bind
        source: /media/tv
        target: /media/tv
      - type: bind
        source: /media/movies
        target: /media/movies
      - type: bind
        source: /media/anime
        target: /media/anime
    restart: 'unless-stopped'
    # Optional - alternative address used for autodiscovery
    environment:
      - JELLYFIN_PublishedServerUrl=https://jellyfin.antcar.casa
    # Optional - may be necessary for docker healthcheck to pass if running in host network mode
    extra_hosts:
      - 'host.docker.internal:host-gateway'
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - homepage.name=Jellyfin
      - homepage.icon=si-#00A4DC
      - homepage.href=http://hub.antcar:8096

  mosquitto:
    image: eclipse-mosquitto:latest
    restart: always
    network_mode: host
    container_name: mqtt
    ports:
      - 1883:1883
      - 9001:9001
    volumes:
      - /root/mosquitto/config:/mosquitto/config
      - /root/mosquitto/data:/mosquitto/data
      - /root/mosquitto/log:/mosquitto/log
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  navidrome:
    image: deluan/navidrome:latest
    container_name: navidrome
    user: root
    ports:
      - '4533:4533'
    restart: unless-stopped
    environment:
      - ND_SCANSCHEDULE=1h
      - ND_LOGLEVEL=info
      - ND_SESSIONTIMEOUT=730h # 1 month
      - ND_ENABLESHARING=true
      - 'ND_BASEURL=https://music.antcar.casa'
      - 'ND_UILOGINBACKGROUNDURL=aHR0cHM6Ly9mcmVlNGt3YWxscGFwZXJzLmNvbS91cGxvYWRzL29yaWdpbmFscy8yMDIwLzAyLzI1L3BlcnNvbmEtbmlnaHR0aW1lLXRva3lvLXdhbGxwYXBlcgo='
    volumes:
      - navidrome-data:/data
      - /media/music:/music:ro
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - homepage.name=Navidrome
      - homepage.icon=mdi-F075A
      - homepage.href=https://music.antcar.casa

  nginx:
    image: 'jc21/nginx-proxy-manager:latest'
    container_name: nginx
    restart: unless-stopped
    ports:
      - '8000:80'
      - '81:81'
      - '443:443'
    volumes:
      - ./data:/data
      - ./letsencrypt:/etc/letsencrypt
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  prometheus:
    image: prom/prometheus
    container_name: prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yaml'
    depends_on:
    - cadvisor
    ports:
      - 9090:9090
    restart: unless-stopped
    extra_hosts:
      - 'host.docker.internal:host-gateway'
    volumes:
      - /var/lib/prometheus:/etc/prometheus
      - prom-data:/prometheus
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Observability
      - homepage.name=Prometheus
      - homepage.icon=mdi-F075A
      - homepage.href=http://hub.antcar:9090

  prowlarr:
    image: lscr.io/linuxserver/prowlarr:latest
    container_name: prowlarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - prowlarr-data:/config
    ports:
      - 9696:9696
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - homepage.name=Prowlarr
      - homepage.icon=si-#CD792C
      - homepage.href=http://hub.antcar:9696

  redis:
    image: redis:latest
    container_name: redis
    ports:
    - 6379:6379
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  root-s3-backup:
    container_name: root-s3-backup
    image: istepanov/backup-to-s3:latest
    restart: always
    environment:
      - ACCESS_KEY={{ s3_backup_aws_access_key }}
      - 'SECRET_KEY={{ s3_backup_aws_secret_key }}'
      - S3_PATH=s3://anthonymag-backups/root/
      - 'CRON_SCHEDULE=0 5 * * *'
    volumes:
      - /root-backups:/data:ro
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  sabnzbd:
    image: lscr.io/linuxserver/sabnzbd:latest
    container_name: sabnzbd
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - sabnzbd-config:/config
      - /media/downloads:/downloads
    ports:
      - 8990:8080
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - homepage.name=sabNZBD
      - homepage.icon=mdi-F1462
      - homepage.href=http://192.168.1.4:8990

  samba:
    image: ghcr.io/servercontainers/samba:latest
    container_name: samba
    restart: unless-stopped
    environment:
      ACCOUNT_{{ samba_username01 }}: {{ samba_password01 }}
      ACCOUNT_{{ samba_username02 }}: {{ samba_password02 }}
      UID_{{ samba_username01 }}: 102
      UID_{{ samba_username02 }}: 101
      SAMBA_VOLUME_CONFIG_media: |
        [media]
         path = /shares/media
         guest ok = no
         browseable = yes
         public = no
         writeable = yes
         available = yes
         valid users = {{ samba_username01 }}, {{ samba_username02 }}
      SAMBA_CONF_LOG_LEVEL: 3
    volumes:
      - /media:/shares/media
    ports:
      - 445:445
    cap_add:
      - CAP_NET_ADMIN
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"

  sonarr-tv:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr-tv
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - sonarr-data:/config
      - /media/tv:/media
      - /media/downloads:/downloads
    ports:
      - 8989:8989
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - 'homepage.name=Sonarr (TV)'
      - homepage.icon=si-#2596BE
      - homepage.href=http://hub.antcar:8989

  sonarr-anime:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr-anime
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - sonarr-anime-data:/config
      - /media/anime:/media
      - /media/downloads:/downloads
    ports:
      - 8991:8989
    restart: unless-stopped
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - homepage.group=Media
      - 'homepage.name=Sonarr (Anime)'
      - homepage.icon=si-#2596BE
      - homepage.href=http://hub.antcar:8991

  speedtest:
    container_name: speedtest
    image: henrywhitaker3/speedtest-tracker:dev
    ports:
      - 8765:80
    volumes:
      - /root/speedtest-data:/config
    environment:
      - TZ=America/New_York
      - PGID=
      - PUID=
      - OOKLA_EULA_GDPR=true
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    restart: unless-stopped
    labels:
      - homepage.group=Observability
      - homepage.name=Speedtest
      - homepage.icon=si-#141526
      - homepage.href=http://hub.antcar:8765
    
  zigbee2mqtt:
    container_name: zigbee2mqtt
    image: koenkk/zigbee2mqtt:latest
    restart: unless-stopped
    volumes:
      - /root/zigbee2mqtt/data:/app/data
      - /run/udev:/run/udev:ro
    ports:
      - 8080:8080
    environment:
      - TZ=America/New_York
    devices:
      - /dev/serial/by-id/usb-ITead_Sonoff_Zigbee_3.0_USB_Dongle_Plus_323cbd3fdb66ec11b6f72342ef680de7-if00-port0:/dev/ttyACM0
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - 'homepage.group=Home Automation'
      - homepage.name=Zigbee2MQTT
      - homepage.icon=si-#EB0443
      - homepage.href=http://hub.antcar:8080
        
  zwave-js-ui:
    container_name: zwave
    image: zwavejs/zwave-js-ui:latest
    restart: always
    tty: true
    stop_signal: SIGINT
    environment:
      - SESSION_SECRET={{ zwave_session_secret }}
      - ZWAVEJS_EXTERNAL_CONFIG=/usr/src/app/store/.config-db
      - TZ=America/New_York
    networks:
      - zwave
    devices:
      # Do not use /dev/ttyUSBX serial devices, as those mappings can change over time.
      # Instead, use the /dev/serial/by-id/X serial device for your Z-Wave stick.
      - '/dev/serial/by-id/usb-Silicon_Labs_Zooz_ZST10_700_Z-Wave_Stick_ccd9f8b4da60ec11907e3d7625bfaa52-if00-port0:/dev/zwave'
    volumes:
      - /root/zwave-config:/usr/src/app/store
    ports:
      - '8091:8091' # port for web interface
      - '3000:3000' # port for Z-Wave JS websocket server
    logging:
      driver: "json-file"
      options:
        max-file: "10"
        max-size: "200k"
    labels:
      - 'homepage.group=Home Automation'
      - homepage.name=ZWave-JS-UI
      - homepage.icon=mdi-F0AEA
      - homepage.href=http://hub.antcar:8091

networks:
  zwave:
volumes:
  bazarr-config:
  deluge-config:
  esphome-config:
  grafana:
    name: grafana
  homepage-config:
  media:
  jellyfin-config:
  jellyfin-cache:
  navidrome-data:
  prom-data:
    name: prom-data
  prowlarr-data:
    name: prowlarr-data
  sabnzbd-config:
    name: sabnzbd-config
  sonarr-data:
    name: sonarr-data
  sonarr-anime-data:
    name: sonarr-anime-data
  speedtest-data:
  zwave-config:
    name: zwave-config
